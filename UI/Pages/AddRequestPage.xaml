<Page x:Class="UI.AddRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d"
      Title="AddRequestPage">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Id -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:"  
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="IdTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>
            
            <!-- Date -->
            <TextBlock Text="Дата:" Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <DatePicker x:Name="DatePicker" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <!-- Type -->
            <TextBlock Text="Тип:" Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="TypeTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <!-- Model -->
            <TextBlock Text="Модель:" Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="ModelTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <!-- Description -->
            <TextBlock Text="Описание:" Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Grid.Column="1" Margin="5"
                     AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>

            <!-- ClientFullName -->
            <TextBlock Text="ФИО клиента:" Grid.Row="5" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="ClientFullNameTextBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

            <!-- ClientPhoneNumber -->
            <TextBlock Text="Телефон клиента:" Grid.Row="6" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="ClientPhoneNumberTextBox" Grid.Row="6" Grid.Column="1" Margin="5"/>

            <!-- PerformerFullName -->
            <TextBlock Text="ФИО исполнителя:" Grid.Row="7" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="PerformerFullNameTextBox" Grid.Row="7" Grid.Column="1" Margin="5"/>

            <!-- Status -->
            <TextBlock Text="Статус:" Grid.Row="8" Grid.Column="0"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
            <TextBox x:Name="StatusTextBox" Grid.Row="8" Grid.Column="1" Margin="5"/>

            <!-- Buttons -->
            <DockPanel Grid.Row="9" Grid.Column="0">
                <StackPanel DockPanel.Dock="Right">
                    
                    <Button x:Name="SaveButton"
                            Content="Сохранить"
                            Margin="5"/>
                    <Button x:Name="CancelButton"
                            Content="Отмена"
                            Margin="5"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </ScrollViewer>
</Page>
